@model GigHub.Core.ViewModels.GigDetailsViewModel

@{
    ViewBag.Title = "Details";
}

<h2 id="artistHeader">
    @Model.Gig.Artist.Name
    @if (Model.ShowAction) {
        <button data-artist-id="@Model.Gig.ArtistId"
                class="btn @(Model.IsFollowing? "btn-info" : "btn-default") btn-sm js-toggle-follow">
            @(Model.IsFollowing ? "Following" : "Follow ?")
        </button>
    }
</h2>

<p>Performing at @Model.Gig.Venue on @Model.Gig.DateTime.ToString("dd MMM") at @Model.Gig.DateTime.ToShortTimeString()</p>

@if (Model.IsAttending) {
    <p>You are going to the event.</p>
}

@section scripts{
    <script>
        $(document)
            .ready(function () {
                FollowingsController.init("#artistHeader");
            });
    </script>
}